<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8">
	<title>登录 /注册</title>
	<%- include('script.ejs')%>

	
</head>

<body <%=backgroundcolor%>>
	
<%- include('star.ejs')%>
	<div class="container" >

		<div id="header"><%- include('header.ejs')%></div>

		<!-- 内容 -->
		<div class="row" style="margin-top: 10px">

			<div id="left" class="col-lg-2"><%- include('left.ejs')%></div>
			<div id="main" class="col-lg-7 color" style=" text-align: center;">
				<div class="function-group">
					<div class="function-menu nav">
						<div id="login-btn" class="menu-item green" style="margin-left: 15rem;">登录</div>
						<div class="menu-item" id="reg-btn">注册</div>

					</div>
					<div class="function-part row">


						<div class="card col-lg-12" id="login">

							<div class="card-body ">
								<form action="/login" method="POST">

									<div class="form-group row">
										<label for="inputPassword" class="col-sm-3 col-form-label">用户名</label>
										<div class="col-sm-8">
											<input type="text" class="form-control" id="inputPassword3"
												required="required" placeholder="Username" name="name">
										</div>
									</div>
									<div class="form-group row">
										<label for="inputPassword" class="col-sm-3 col-form-label">密码</label>
										<div class="col-sm-8">
											<input type="password" class="form-control" id="inputPassword3"
												required="required" placeholder="Password" name="password">
										</div>
									</div>

									<div class="form-group" style="text-align: center;color: red;">

										<%=errmsg%>
									</div>
									<div class="form-group" style="text-align: center;">

										<div>
											<input class="btn btn-primary" type="submit" value="登录">
										</div>
									</div>

								</form>
							</div>
						</div>

						<div class="card col-lg-12" id="reg">
							<div class="card-body">

								<form action="/reg" method="POST">

									<div class="form-group row">
										<label for="inputEmail3" class="col-sm-2 col-form-label">用户名</label>
										<div class="col-sm-8">
											<input type="text" class="form-control" id="inputEmail3"
												placeholder="Username" name="name" required>
										</div>
									</div>

									<div class="form-group row">
										<label for="inputPassword3" class="col-sm-2 col-form-label">密码</label>
										<div class="col-sm-8">
											<input type="password" class="form-control" id="inputPassword3"
												required="required" placeholder="Password" name="password">
										</div>
									</div>

									<div class="form-group row">
										<label for="inputPassword3" class="col-sm-2 col-form-label">性别</label>
										<div class="col-sm-1">
											<div class="form-check form-check-inline">

												<input class="form-check-input" type="radio" name="sex" id="sex1"
													value="男"> <label class="form-check-label" for="sex1">男</label>

											</div>
										</div>
										<div class="col-sm-1">

											<div class="form-check form-check-inline">
												<input class="form-check-input" type="radio" name="sex" id="sex2"
													value="女"> <label class="form-check-label" for="sex2">女</label>
											</div>

										</div>
									</div>

									<div class="form-group row">
										<label for="inputPassword3" class="col-sm-2 col-form-label">出生年月</label>
										<div class="col-sm-5">

											<input class="form-control" type="date" name="birth" id="inputPassword3"
												value="1980-01-01" placeholder="生日">

										</div>
									</div>

									<div class="form-group row">

										<label for="inputPassword3" class="col-sm-2 col-form-label">院系</label>
										<div class="col-sm-4">
											<select class="form-control" name="department">
												<% for(var i=0;i<departments.length;i++) {%>
													<option value="<%=departments[i]._doc.name %>"><%= departments[i]._doc.name %></option>
												<% }%>

											</select>

										</div>
									</div>
									<div class="form-group row">
										<label for="inputPassword3" class="col-sm-2 col-form-label">年级</label>
										<div class="col-sm-4">
											<select class="form-control" name="grade">
												<option value="2018级">2018级</option>
												<option value="2019级">2019级</option>
												<option value="2020级">2020级</option>
												<option value="2021级">2021级</option>
											</select>

										</div>
									</div>
									<div class="form-group" style="text-align: center;">
										<div>
											<input type="submit" value="注册" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
										</div>
									</div>

								</form>

							</div>
						</div>
					</div>
				</div>
			</div>
			<div id="right" class="col-lg-3"><%- include('right.ejs')%></div>
		</div>

	</div>

</body>
<script type="text/javascript">
	$(document).ready(function () {
		$("#login").show();
		$("#reg").hide();
		$("#login-btn").click(function () {
			$("#login-btn").attr("class", "menu-item green");
			$("#reg-btn").attr("class", "menu-item");
			$("#login").show();
			$("#reg").hide();
		});
		$("#reg-btn").click(function () {
			$("#login-btn").attr("class", "menu-item");
			$("#reg-btn").attr("class", "menu-item green");
			$("#login").hide();
			$("#reg").show();
		});
	});

</script>

</html>